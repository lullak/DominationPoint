@model CreateTeamViewModel
@{
    ViewData["Title"] = "Create New Team";
    Layout = "_AdminLayout";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-6">
        <form asp-action="CreateTeam" method="post">
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="TeamName" class="form-label"></label>
                <input asp-for="TeamName" class="form-control" />
                <span asp-validation-for="TeamName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ColorHex" class="form-label"></label>
                <input asp-for="ColorHex" class="form-control form-control-color" type="color" title="Choose team color">
                <span asp-validation-for="ColorHex" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary mt-3">Create Team</button>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.PartialAsync("_ValidationScriptsPartial");
    }
}